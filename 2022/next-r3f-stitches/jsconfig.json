{
	"compilerOptions": {
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/assets/*": [
				"/assets/*"
			],
			"@/content/*": [
				"/content/*"
			],
			"@/components/*": [
				"/components/*"
			],
			"@/highway/*": [
				"/highway/*"
			],
			"@/layout/*": [
				"/layout/*"
			],
			"@/pages/*": [
				"/pages/*"
			],
			"@/styles/*": [
				"/styles/*"
			],
			"@/utils/*": [
				"/utils/*"
			]
		},
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"exclude": [
		"node_modules",
		".next",
		".vscode",
		"out"
	],
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
	]
}